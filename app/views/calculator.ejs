<!DOCTYPE html>
<html lang="en" ng-app="SolarApp">
  <head>
    <title></title>
    <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/animate.css">
    <link rel="stylesheet" href="pure_drawer/dist/css/pure-drawer.css"/>
    <link rel="stylesheet" href="pure_drawer/dist/scss/pure-drawer.scss"/>
    <script src="bower_components/angular/angular.js"></script>
    <script src="js/app.js"></script> 
    <script src="js/calculator_controller.js"></script>
    <script src="js/solar_controller.js"></script>
    <script src="js/dateformat.js"></script>
    <script src="bower_components/jquery/dist/jquery.js"></script>
  </head>
  <div class="pure-container" data-effect="pure-effect-reveal">
    <input type="checkbox" id="pure-toggle-top" class="pure-toggle" data-toggle="right"> 
    <label class="pure-toggle-label" for="pure-toggle-top" data-toggle-label="right"> 
    <span class="pure-toggle-icon"></span> 
    </label> 
    <div class="pure-drawer" data-position="top"> 
      <nav class="navbar navbar-light bg-faded">
        <h3> 
          <ul class="nav nav-pills">
            <li role="presentation"><a href="/">Planets</a></li>
            <li role="presentation"><a href="/calculator">LIC Age Calculator</a></li>
          </ul> 
        </h3>
      </nav>
    </div>
    <div class="pure-pusher-container">
      <div class="pure-pusher">
        <body>
          <div class="content">          
            <div ng-controller="CalculatorController">
              <div class="row">
                <header class="calculator col-lg-12">
                  <h1>Local Interstellar Cloud Age Calculator</h1>
                  <div class="calculator">
                    <h3> Please enter your birth date</h3>
                    <input id="month" class="dateEntry" type="text" tabindex="1" placeholder="MM" size="3" maxlength="2" onkeyup="nextBox(this)">
                    <input id="day" class="dateEntry" type="text" tabindex="2" placeholder="DD" size="3" maxlength="2" onkeyup="nextBox(this)">
                    <input id="year" class="dateEntry" type="text" tabindex="3" placeholder="YYYY" size="5" maxlength="4" onkeyup="nextBox(this)">
                    <br>
                    <button id="calculate" class="btn btn-sm" ng-click="compute_age()">Calculate</button>
                  </div>
                </header>
                <div class="container">
                  <div class="results">
                    <div class="col-xs-4 calculations" ng-if="nextMerBday">
                      <h3>Mercury</h3>
                      <img src="images/mercury.png" class="calculator-thumb">
                      <p ng-if="merAgeYear" ><strong>{{merAgeYear}}</strong> Mercurian Years</p>
                      <p ng-if="merAgeDay" ><strong>{{merAgeDay}}</strong> Mercurian Days</p>
                      <p><strong>Next Birthday:</strong><br> {{nextMerBday}}</p>
                    </div>
                    <div class="col-xs-4 calculations" ng-if="nextVenBday">
                      <h3>Venus</h3>
                      <img src="images/venus.png" class="calculator-thumb">
                      <p ng-if="venAgeYear" ><strong>{{venAgeYear}}</strong> Venusian Years</p>
                      <p ng-if="venAgeDay" ><strong>{{venAgeDay}}</strong> Venusian Days</p>
                      <p><strong>Next Birthday:</strong><br> {{nextVenBday}}</p>
                    </div>
                    <div class="col-xs-4 calculations" ng-if="nextEarBday">
                      <h3>Earth</h3>
                      <img src="images/earth.png" class="calculator-thumb">
                      <p ng-if="earAgeYear" ><strong>{{earAgeYear}}</strong> Earth Years</p>
                      <p ng-if="earAgeDay"><strong>{{earAgeDay}}</strong> Earth Days</p>
                      <p><strong>Next Birthday:</strong><br> {{nextEarBday}}</p>
                    </div>
                    <div class="col-xs-4 calculations" ng-if="nextMarBday">
                      <h3>Mars</h3>
                      <img src="images/mars.png" class="calculator-thumb">
                      <p ng-if="marAgeYear" ><strong>{{marAgeYear}}</strong> Martian Years</p>
                      <p ng-if="marAgeDay" ><strong>{{marAgeDay}}</strong> Martian Days</p>
                      <p><strong>Next Birthday:</strong><br> {{nextMarBday}}</p>
                    </div>
                    <div class="col-xs-4 calculations" ng-if="nextJupBday">
                      <h3>Jupiter</h3>
                      <img src="images/jupiter.png" class="calculator-thumb">
                      <p ng-if="jupAgeYear" ><strong>{{jupAgeYear}}</strong> Jovian Years</p>
                      <p ng-if="jupAgeDay" ><strong>{{jupAgeDay}}</strong> Jovian Days</p>
                      <p><strong>Next Birthday:</strong><br> {{nextJupBday}}</p>
                    </div>
                    <div class="col-xs-4 calculations" ng-if="nextSatBday">
                      <h3>Saturn</h3>
                      <img src="images/saturn.png" class="calculator-thumb">
                      <p ng-if="satAgeYear" ><strong>{{satAgeYear}}</strong> Saturnian Years</p>
                      <p ng-if="satAgeDay" ><strong>{{satAgeDay}}</strong> Saturnian Days</p>
                      <p><strong>Next Birthday:</strong><br> {{nextSatBday}}</p>
                    </div>
                    <div class="col-xs-4 calculations" ng-if="nextUraBday">
                      <h3>Uranus</h3>
                      <img src="images/uranus.png" class="calculator-thumb">
                      <p ng-if="uraAgeYear" ><strong>{{uraAgeYear}}</strong> Uranian Years</p>
                      <p ng-if="uraAgeDay" ><strong>{{uraAgeDay}}</strong> Uranian Days</p>
                      <p><strong>Next Birthday:</strong><br> {{nextUraBday}}</p>
                    </div>
                    <div class="col-xs-4 calculations" ng-if="nextNepBday">
                      <h3>Neptune</h3>
                      <img src="images/neptune.png" class="calculator-thumb">
                      <p ng-if="nepAgeYear" ><strong>{{nepAgeYear}}</strong> Neptunian Years</p>
                      <p ng-if="nepAgeDay" ><strong>{{nepAgeDay}}</strong> Neptunian Days</p>
                      <p><strong>Next Birthday:</strong><br> {{nextNepBday}}</p>
                    </div>
                    <div class="col-xs-4 calculations" ng-if="nextPluBday">
                      <h3>Pluto</h3>
                      <img src="images/pluto.png" class="calculator-thumb">
                      <p ng-if="pluAgeYear" ><strong>{{pluAgeYear}}</strong> Plutonian Years</p>
                      <p ng-if="pluAgeDay" ><strong>{{pluAgeDay}}</strong> Plutonian Days</p>
                      <p><strong>Next Birthday:</strong><br> {{nextPluBday}}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <footer></footer>
        </body>
      </div>
    </div>
    <label class="pure-overlay" for="pure-toggle-right" data-overlay="right"></label> 
  </div>
</html>